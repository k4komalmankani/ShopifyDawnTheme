<section>
  <div class="">
    <video controls poster="{{ section.settings.poster_image | img_url : 'master' }}" width="100%" height="100%">
      <source src="{{ section.settings.video_link }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  </div>
</section>

{% schema %}
{
  "name": "Custom Video",
  "settings": [
    {
      "type" : "image_picker",
      "id" : "poster_image",
      "label" : "Poster Image"
    },
    {
      "type" : "url",
      "id" : "video_link",
      "label" : "Video Link"
    }
  ],
  "presets": [
    {
      "name": "Custom Video"
    }
  ]
}
{% endschema %}

